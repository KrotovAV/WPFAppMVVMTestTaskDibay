<UserControl x:Class="WpfAppPhoneCompany.Views.StreetsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:WpfAppPhoneCompany.Views"
             xmlns:vm="clr-namespace:WpfAppPhoneCompany.ViewModels"
             d:DataContext="{d:DesignInstance {x:Type vm:StreetsViewModel}}" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadDataCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Column="0" Header="Улицы" >

            <DockPanel>
                <TextBox DockPanel.Dock="Top" Text="{Binding Path=StreetFilter, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                <UniformGrid DockPanel.Dock="Bottom" Rows="1">
                    <Button Content="Добавить" Margin="3" 
                            Command="{Binding Path=AddNewStreetCommand}"/>
                    <Button Content="Удалить" Margin="3" 
                            Command="{Binding Path=RemoveStreetCommand}"
                            CommandParameter="{Binding Path=SelectedStreet}"/>
                </UniformGrid>
                <ListBox MinWidth="140" ItemsSource="{Binding StreetsView}"
                         SelectedItem="{Binding SelectedStreet}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" ToolTip="{Binding Name}"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </GroupBox>
        
        <GroupBox Grid.Column="1" Header="Абоненты"
                  
                  >
            <DockPanel>
                <DataGrid>
                    <DataGridTemplateColumn Header="Фамилия" Width="Auto"/>
                    <DataGridTemplateColumn Header="Имя" Width="Auto"/>
                    <DataGridTemplateColumn Header="Отчество" Width="Auto"/>
                    <DataGridTemplateColumn Header="Улица" Width="Auto"/>
                    <DataGridTemplateColumn Header="Дом" Width="Auto"/>
                    <DataGridTemplateColumn Header="Кв." Width="Auto"/>
                    <DataGridTemplateColumn Header="Номер дом." Width="Auto"/>
                    <DataGridTemplateColumn Header="Номер раб." Width="Auto"/>
                    <DataGridTemplateColumn Header="Номер моб." Width="Auto"/>
                </DataGrid>
            </DockPanel>
        </GroupBox>

    </Grid>
</UserControl>
